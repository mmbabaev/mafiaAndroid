<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mbabaev.mafiaapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.RegisterUserActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.JoinToGameActivity"></activity>
        <activity android:name=".controllers.RoleActivity"></activity>
        <activity android:name=".controllers.DayIntroductionActivity"></activity>
        <activity android:name=".controllers.NightIntroductionActivity"></activity>
        <activity android:name=".controllers.NightActivity"></activity>
        <activity android:name=".controllers.DayActivity"></activity>
    </application>

</manifest>